{
	"name": "Dataflow1",
	"properties": {
		"description": "This is my first dataflow.",
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Delimited_Text_Sample",
						"type": "DatasetReference"
					},
					"name": "SourceDataset",
					"description": "My Source Dataset"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DelimitedText1",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "DataSelection",
					"description": "selecting sample records from dataset"
				},
				{
					"name": "FilterSample",
					"description": "Applying some normal filter in it."
				},
				{
					"name": "ModifyColumns1",
					"description": "Autogenerated by data preview actions"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Emp_id as integer '000',",
				"          { Name} as string,",
				"          { Age} as integer '000',",
				"          { Salary} as decimal(10,0) '$#########.###',",
				"          { Address} as string,",
				"          { Country} as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     inferDriftedColumnTypes: true,",
				"     ignoreNoFilesFound: false) ~> SourceDataset",
				"FilterSample select(skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> DataSelection",
				"ModifyColumns1 filter(Emp_id>5) ~> FilterSample",
				"SourceDataset derive({ Salary} = toInteger(toInteger({ Salary}))) ~> ModifyColumns1",
				"DataSelection sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}